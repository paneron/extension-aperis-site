{
    "compilerOptions": {
      "target": "es2019",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": [
        "es2022",
        "DOM"
      ],

      "strict": true,
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,

      "sourceMap": true,
      "inlineSources": true,

      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,

      "newLine": "lf",

      "declaration": true,
      "jsx": "react"
    }
}
